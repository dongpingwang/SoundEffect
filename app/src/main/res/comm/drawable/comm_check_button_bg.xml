<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/comm_ripple_color">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/check_btn_disable" />
                    <corners android:radius="3.24dp" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="@color/check_btn_enable" />
                    <corners android:radius="3.24dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>