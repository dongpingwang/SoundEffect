<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/position_up_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@drawable/ic_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/position_left_btn"
            style="@style/btnBalanceAdjust"
            android:layout_marginEnd="11.3dp"
            android:src="@drawable/ic_left" />

        <ImageButton
            android:id="@+id/position_middle_btn"
            style="@style/btnBalanceAdjust" />

        <ImageButton
            android:id="@+id/position_right_btn"
            style="@style/btnBalanceAdjust"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_right" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/position_down_btn"
        style="@style/btnBalanceAdjust"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_down" />

</LinearLayout>