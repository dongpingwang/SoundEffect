<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_up"
        android:layout_width="@dimen/eq_iv_arrow_width"
        android:layout_height="@dimen/eq_iv_arrow_height"
        android:background="@drawable/comm_adjust_button_bg"
        android:src="@drawable/ic_eq_arrow_up" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_color_highlight"
        android:textSize="@dimen/font_16"
        tools:text="6dB" />

    <ImageView
        android:id="@+id/btn_down"
        android:layout_width="@dimen/eq_iv_arrow_width"
        android:layout_height="@dimen/eq_iv_arrow_height"
        android:background="@drawable/comm_adjust_button_bg"
        android:src="@drawable/ic_eq_arrow_down" />

</LinearLayout>