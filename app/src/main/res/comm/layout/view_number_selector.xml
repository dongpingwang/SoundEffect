<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="166.48dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/number_selector_text_color"
        android:textSize="@dimen/font_16"
        tools:text="左前方" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2.71dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="52.97dp"
            android:layout_height="52.97dp"
            android:background="@drawable/comm_ripple_borderless"
            android:scaleType="center"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:maxEms="5"
            android:minEms="5"
            android:singleLine="true"
            android:textColor="@color/number_selector_text_color"
            android:textSize="@dimen/font_16"
            tools:text="0db" />

        <ImageButton
            android:id="@+id/right_btn"
            android:layout_width="52.97dp"
            android:layout_height="52.97dp"
            android:background="@drawable/comm_ripple_borderless"
            android:scaleType="center"
            android:src="@drawable/ic_right" />
    </LinearLayout>
</LinearLayout>