<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/attenuator_adjuster_up"
        style="@style/btnBalanceAdjust"
        android:src="@drawable/ic_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/attenuator_adjuster_left"
            style="@style/btnBalanceAdjust"
            android:layout_marginEnd="11.3dp"
            android:src="@drawable/ic_left" />

        <ImageButton
            android:id="@+id/attenuator_adjuster_center"
            style="@style/btnBalanceAdjust"
            android:src="@drawable/ic_center" />

        <ImageButton
            android:id="@+id/attenuator_adjuster_right"
            style="@style/btnBalanceAdjust"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_right" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/attenuator_adjuster_down"
        style="@style/btnBalanceAdjust"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_down" />

</LinearLayout>