<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/btn_front_left"
        style="@style/btnListenPosition"
        android:text="@string/position_driver" />

    <RadioButton
        android:id="@+id/btn_front_right"
        style="@style/btnListenPosition"
        android:layout_marginStart="@dimen/btn_listen_position_margin_start"
        android:layout_marginTop="@dimen/minus_btn_listen_position_height"
        android:text="@string/position_copilot" />

    <RadioButton
        android:id="@+id/btn_front_row"
        style="@style/btnListenPosition"
        android:layout_marginTop="@dimen/btn_listen_position_margin_top"
        android:text="@string/position_front_row" />

    <RadioButton
        android:id="@+id/btn_back_row"
        style="@style/btnListenPosition"
        android:layout_marginStart="@dimen/btn_listen_position_margin_start"
        android:layout_marginTop="@dimen/minus_btn_listen_position_height"
        android:text="@string/position_back_row" />

    <RadioButton
        android:id="@+id/btn_all"
        style="@style/btnListenPosition"
        android:layout_marginTop="@dimen/btn_listen_position_margin_top"
        android:checked="true"
        android:text="@string/position_all" />

    <RadioButton
        android:id="@+id/btn_off"
        style="@style/btnListenPosition"
        android:layout_marginStart="@dimen/btn_listen_position_margin_start"
        android:layout_marginTop="@dimen/minus_btn_listen_position_height"
        android:text="@string/position_close" />
</RadioGroup>
