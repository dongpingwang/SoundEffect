<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_down"
        android:layout_width="@dimen/eq_iv_arrow_width"
        android:layout_height="@dimen/eq_iv_arrow_height"
        android:background="@drawable/comm_adjust_button_bg"
        android:src="@drawable/ic_eq_arrow_left" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.46dp"
        android:singleLine="true"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/font_16"
        tools:text="频率" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.46dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_color_highlight"
        android:textSize="@dimen/font_16"
        tools:text="2KHz" />

    <ImageView
        android:id="@+id/btn_up"
        android:layout_width="@dimen/eq_iv_arrow_width"
        android:layout_height="@dimen/eq_iv_arrow_height"
        android:layout_marginStart="18.16dp"
        android:background="@drawable/comm_adjust_button_bg"
        android:src="@drawable/ic_eq_arrow_right" />

</LinearLayout>