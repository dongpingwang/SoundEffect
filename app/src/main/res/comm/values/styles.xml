<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--收听位置-->
    <style name="btnListenPosition">
        <item name="android:layout_width">@dimen/btn_listen_position_width</item>
        <item name="android:layout_height">@dimen/btn_listen_position_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:background">@drawable/selector_btn_listen_position</item>
    </style>

    <!--车座-->
    <style name="speakersLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">0.85</item>
        <item name="android:scaleY">0.85</item>
    </style>

    <!--开关-->
    <declare-styleable name="CheckButton">
        <attr name="on_remind_icon" format="reference" />
        <attr name="off_remind_icon" format="reference" />
        <attr name="on_remind_text" format="string" />
        <attr name="off_remind_text" format="string" />
        <attr name="on_text" format="string" />
        <attr name="off_text" format="string" />
        <attr name="checked" format="boolean" />
        <attr name="checkable" format="boolean" />
    </declare-styleable>

    <!--数字调节器-->
    <declare-styleable name="NumberSelector">
        <attr name="max" />
        <attr name="min" />
        <attr name="value" format="integer" />
        <attr name="text" format="string" />
        <attr name="step" />
        <attr name="is_loop" format="boolean" />
        <attr name="visibility_title">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="selector_enable" format="boolean" />
    </declare-styleable>

</resources>