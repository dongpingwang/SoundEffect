<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411.89dp"
    android:layout_height="155.68dp"
    android:background="@color/dialog_bg">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.22dp"
        android:layout_marginTop="16.22dp"
        android:text="@string/name"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/font_20" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="16.22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:maxLength="11"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/text_color_normal"
        android:textCursorDrawable="@drawable/shape_et_cursor"
        android:textSize="@dimen/font_16"
        tools:text="摇滚" />

    <View
        android:layout_width="378dp"
        android:layout_height="2dp"
        android:layout_below="@id/et_name"
        android:layout_marginStart="16.22dp"
        android:layout_marginTop="8dp"
        android:background="@color/theme_color" />

    <TextView
        android:id="@+id/tv_del"
        style="@style/dialog_action_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16.22dp"
        android:text="@string/delete" />


    <TextView
        android:id="@+id/tv_save"
        style="@style/dialog_action_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30.31dp"
        android:text="@string/save" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/dialog_action_tv"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/tv_save"
        android:text="@string/cancel" />
</RelativeLayout>

