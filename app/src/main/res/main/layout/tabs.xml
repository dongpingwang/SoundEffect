<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/tab_width_add"
    android:layout_height="match_parent">

    <com.flyaudio.lib.ui.flyaudio.FlyTabBar
        android:id="@+id/tab_bar"
        android:layout_width="@dimen/tab_width"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tab"
        app:appIcon="@drawable/tab_app_icon"
        app:selectedIndex="0"
        app:tabActiveBackground="@drawable/bg_tab_item"
        app:tabAlign="center"
        app:tabColor="@color/selector_tab_text"
        app:tabTextSize="@dimen/font_12">

        <com.flyaudio.lib.ui.flyaudio.FlyTabIcon
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_item_height"
            app:normalText="@string/eq_mode"
            app:tabIcon="@drawable/selector_tab_eq" />

        <com.flyaudio.lib.ui.flyaudio.FlyTabIcon
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_item_height"
            android:text="@string/listen_position"
            app:tabIcon="@drawable/selector_tab_listen_position" />

        <com.flyaudio.lib.ui.flyaudio.FlyTabIcon
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_item_height"
            app:normalText="@string/setting"
            app:tabIcon="@drawable/selector_tab_setting" />
    </com.flyaudio.lib.ui.flyaudio.FlyTabBar>
</FrameLayout>

