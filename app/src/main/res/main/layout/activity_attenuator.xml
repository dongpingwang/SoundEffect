<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_content"
    android:orientation="vertical">

    <include layout="@layout/layout_comm_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.flyaudio.soundeffect.comm.view.attenuator.AttenuatorAdjuster
            android:id="@+id/attenuator_adjuster_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="89.73dp" />

        <com.flyaudio.soundeffect.comm.view.SpeakersLayout
            android:id="@+id/speakers_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="101.62dp" />

        <com.flyaudio.soundeffect.comm.view.attenuator.SoundFieldCoordinateView
            android:id="@+id/attenuator_touch_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/speakers_layout"
            android:layout_alignTop="@id/speakers_layout"
            android:layout_alignEnd="@id/speakers_layout"
            android:layout_alignBottom="@id/speakers_layout"
            android:layout_marginStart="-23dp"
            android:layout_marginTop="-23dp"
            android:layout_marginEnd="-23dp"
            android:layout_marginBottom="-23dp" />
    </RelativeLayout>

</LinearLayout>