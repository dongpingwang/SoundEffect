<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_main_content"
    android:orientation="vertical">

    <include layout="@layout/layout_comm_title_bar" />

    <com.flyaudio.soundeffect.comm.view.CommSwitch
        android:id="@+id/switch_subwoofer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:switch_name="@string/close_subwoofer" />

    <com.flyaudio.soundeffect.comm.view.CommSwitch
        android:id="@+id/switch_back_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:switch_name="@string/close_back_row" />
</LinearLayout>
